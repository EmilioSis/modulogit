	RewriteRule ^veiculos/edit/(.*)?$ views/menu_cadastros/novo-veiculo.php?id=$1 [L,QSA]

	RewriteRule ^tipo-cacamba?$ views/menu_cadastros/tipo-cacamba.php [L,QSA]
