	RewriteRule ^tipo-cacamba/edit/(.*)?$ views/menu_cadastros/novo-tipo-cacamba.php?id=$1 [L,QSA]

	RewriteRule ^cacamba?$ views/menu_cadastros/cacamba.php [L,QSA]
